<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">


       <androidx.cardview.widget.CardView
        android:id="@+id/cardview_resep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/smothpink"
        android:transitionName="@string/toDetail">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/photo_resep"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginEnd="16dp"
            android:src="@android:color/darker_gray" />


        <LinearLayout
            android:layout_width="324dp"
            android:layout_height="65dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/photo_resep"
            android:orientation="vertical"
            android:layout_marginStart="60dp">

            <TextView
                android:id="@+id/tv_resep_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Nama"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_resep_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Detail" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
